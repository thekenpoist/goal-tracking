<main class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Welcome, <%= currentUser?.username || 'friend' %>!</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
    <!-- Update Goals In Progress Card -->
<div class="bg-white shadow-md rounded-lg p-6">
  <h2 class="text-xl font-semibold mb-4">Goals In Progress</h2>
  <div class="space-y-2">
    <% goals.forEach(goal => {
      const priority = goal.priority?.toLowerCase();
      let priorityColor = 'text-gray-600';
      if (priority === 'high') priorityColor = 'text-red-600';
      if (priority === 'medium') priorityColor = 'text-yellow-600';
      if (priority === 'low') priorityColor = 'text-yellow-300';
    %>
      <p class="flex items-center <%= priorityColor %> font-semibold cursor-pointer hover:underline"
         onclick="loadGoalDetails(<%= goal.goalId %>)">
        <span class="w-2 h-2 rounded-full mr-2 bg-current"></span>
        <%= goal.title %>
      </p>
    <% }) %>
  </div>
</div>

<!-- Update View Active Goal Card -->
<div class="bg-white shadow-md rounded-lg p-6 min-h-[200px]" id="goalDetails">
  <p class="text-gray-600 italic">Select a goal to view details.</p>
</div>

<script>
  function loadGoalDetails(goalId) {
    fetch(`/goals/view/${goalId}`)
      .then(res => res.text())
      .then(html => {
        document.getElementById('goalDetails').innerHTML = html;
      })
      .catch(err => {
        document.getElementById('goalDetails').innerHTML = '<p class="text-red-500">Error loading goal details.</p>';
      });
  }
</script>

<!-- Create views/partials/goal-details.ejs using content from show-goal.ejs -->
<!-- Replace formData with goal -->
<div class="bg-white p-6 rounded-lg shadow">
  <dl class="space-y-4">
    <div>
      <dt class="font-semibold">Title</dt>
      <dd><%= goal.title %></dd>
    </div>
    <div>
      <dt class="font-semibold">Category</dt>
      <dd><%= goal.category %></dd>
    </div>
    <div>
      <dt class="font-semibold">Priority</dt>
      <dd><%= goal.priority %></dd>
    </div>
    <div>
      <dt class="font-semibold">Start Date</dt>
      <dd><%= new Date(goal.startDate).toLocaleDateString('en-US', {
        year: 'numeric', month: 'long', day: 'numeric' }) %></dd>
    </div>
    <div>
      <dt class="font-semibold">End Date</dt>
      <dd><%= new Date(goal.endDate).toLocaleDateString('en-US', {
        year: 'numeric', month: 'long', day: 'numeric' }) %></dd>
    </div>
    <div>
      <dt class="font-semibold">Description</dt>
      <dd><%= goal.description %></dd>
    </div>
  </dl>

  <div class="mt-6 flex justify-center gap-4">
    <a href="/goals/edit/<%= goal.goalId %>" class="bg-yellow-600 text-white font-semibold px-4 py-2 rounded hover:bg-yellow-700 transition">
      Edit Goal
    </a>

    <button type="button" class="bg-red-600 text-white font-semibold px-4 py-2 rounded hover:bg-red-700 transition"
            onclick="confirmDelete(<%= goal.goalId %>)">
      Delete Goal
    </button>
  </div>
</div>
    

    <!-- Stats and Streak Card -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Your Stats</h2>
      <p class="text-gray-600">[Login streak, progress, quote will go here]</p>
    </div>

    <!-- Completed Goals Card -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Completed Goals</h2>
      <p class="text-gray-600">[List of completed goals will go here]</p>
    </div>

  </div>
</main>