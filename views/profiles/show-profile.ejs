<div class="bg-white p-8 rounded-2xl shadow-lg max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">
    <%= formData.realName?.trim() !== '' ? formData.realName : 'Unnamed User' %>'s Profile
  </h1>

  <div class="flex flex-col md:flex-row justify-between items-start gap-6">
    <!-- Profile Info -->
    <dl class="space-y-4 flex-1">
      <div>
        <dt class="font-semibold">Username</dt>
        <dd><%= formData.username %></dd>
      </div>
  
      <div>
        <dt class="font-semibold">Email</dt>
        <dd><%= formData.email %></dd>
      </div>

      <div>
        <dt class="font-semibold">Timezone</dt>
        <dd><%= formData.timezone %></dd>
      </div>
  
      <div>
        <dt class="font-semibold">Member Since</dt>
        <dd><%= new Date(formData.createdAt).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        }) %></dd>
      </div>
      <div>
        <dt class="font-semibold">Last Logged In</dt>
        <dd>
          <% if (formData.lastLoggedIn) { %>
            <%= new Date(formData.lastLoggedIn).toLocaleString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric', 
              hour: '2-digit', 
              minute: '2-digit' 
            }) %>
          <% } else { %>
            <em class="text-gray-500">No login recorded</em>
          <% } %>
        </dd>
      </div>
    </dl>
  
    <!-- Avatar -->
    <div class="shrink-0 text-center">
      <dt class="font-semibold text-lg mb-2">Avatar</dt>
      <% if (formData.avatar && formData.avatar.trim() !== '') { %>
        <img src="<%= formData.avatar %>" alt="User Avatar" class="w-40 h-40 rounded-full border border-gray-300 shadow-md mx-auto" />
      <% } else { %>
        <em class="block text-gray-500">No avatar provided</em>
      <% } %>
    </div>
  </div>
  
  <!-- Edit button -->
  <div class="mt-8 text-center">
    <a href="/profiles/edit-profile" class="inline-block bg-yellow-600 text-white font-semibold px-4 py-2 rounded hover:bg-yellow-700 transition">
      Edit Profile
    </a>
  </div>
</div>