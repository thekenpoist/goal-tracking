<div class="bg-white p-6 rounded shadow-md max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-6">
    <%= formData.realName?.trim() !== '' ? formData.realName : 'Unnamed User' %>'s Profile
  </h1>

  <dl class="space-y-4">
    <div>
      <dt class="font-semibold">Username</dt>
      <dd><%= formData.username %></dd>
    </div>

    <div>
      <dt class="font-semibold">Email</dt>
      <dd><%= formData.email %></dd>
    </div>

    <div>
      <dt class="font-semibold">Member Since</dt>
      <dd><%= new Date(formData.createdAt).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }) %></dd>
    </div>

    <div>
      <dt class="font-semibold">Avatar</dt>
      <dd>
        <% if (formData.avatar && formData.avatar.trim() !== '') { %>
          <img src="<%= formData.avatar %>" alt="User Avatar" class="w-32 h-32 rounded-full" />
        <% } else { %>
          <em>No avatar provided</em>
        <% } %>
      </dd>
    </div>
  </dl>

  <div class="mt-6 text-right">
    <a href="/profiles/edit-profile/<%= formData.uuid %>" class="inline-block bg-yellow-600 text-white font-semibold px-4 py-2 rounded hover:bg-yellow-700 transition">
      Edit Profile
    </a>
  </div>
</div>